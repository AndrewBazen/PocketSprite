<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PocketSprite.ViewModels"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="PocketSprite.Views.PixelCanvasPage"
             Title="Pixel Canvas"
             x:DataType="viewModels:PixelCanvasViewModel">
    <ContentPage.BindingContext>
        <viewModels:PixelCanvasViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Text="Pixel Canvas"
               FontSize="32"
               HorizontalOptions="Center"
               Grid.Row="0"/>
               
        <skia:SKCanvasView x:Name="PixelCanvasView"
                    PaintSurface="OnCanvasViewPaintSurface"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    Grid.Row="1"
                    EnableTouchEvents="True"
                    WidthRequest="500"
                    HeightRequest="500"
                    Touch="OnCanvasViewTouch" />
    </Grid>
</ContentPage>